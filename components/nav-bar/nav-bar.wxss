/* Components/nav-bar/nav-bar.wxss */
.footer-nav{
  position: fixed;
  bottom: 0;
  left:0;
  right:0;
  display: flex;
  height: 100rpx;
  align-items: center;
  justify-content: center;
  box-shadow: 0 -1rpx 6rpx 0 rgba(0,0,0,0.3);
}
.item-box{
  flex:1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
text{
  color:#999999;
  font-size: 24rpx;
  margin-top: 8rpx;
}
.normal{
  color:#999999;
}
.active{
  color: #fd4890;
}
